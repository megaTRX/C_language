#include <stdio.h>

int max4(int a, int b, int c, int d)
{
	int max = a;
	if (b > max) max = b;
	if (c > max) max = c;
	if (d > max) max = d;

	return max;
}

int main(void) {
	int a, b, c, d;
	printf("a를 입력하세요: ");  scanf_s("%d", &a);
	printf("b를 입력하세요: "); scanf_s("%d", &b);
	printf("c를 입력하세요: "); scanf_s("%d", &c);
	printf("d를 입력하세요: ");  scanf_s("%d", &d);

	printf("최댓값은 %d입니다.\n", max4(a, b, c, d));
	return 0;
